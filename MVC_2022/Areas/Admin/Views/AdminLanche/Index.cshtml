@model ReflectionIT.Mvc.Paging.PagingList<MVC_2022.Models.Lanche>

@{
    ViewData["Title"] = "Index";
}
<h3>Lanches</h3>

<form method="get" class="form-inline">

    <input name="filter" class="form-control" placeholder="filtro"
           value="@Model.RouteValue["Filter"]" />

    <button type="submit" class="btn btn-info"> Procurar</button>
</form>

Total de Lanches : @Model.TotalRecordCount
<div>
    <vc:pager paging-list="@Model"></vc:pager>
</div>
<div class="row">
    <div class="col-md-12">
        <a asp-action="Create">Criar Lanche</a> | <a asp-controller="AdminLanchesReport" asp-action="LanchesCategoriaReport">Gerar Relatório</a> | <a asp-controller="AdminLanchesReport" asp-action="LanchesCategoriaPDF">Gerar PDF</a>
    </div>
</div>
<p>
    <a asp-action="Create">Criar Lanche</a>
</p>
<div class="row">
    <div class="col-md-10">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.LancheNome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LancheDescricaoCurta)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LanchePreco)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LancheIsPreferido)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LancheEmEstoque)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Categoria)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.LancheNome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LancheDescricaoCurta)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LanchePreco)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LancheIsPreferido)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LancheEmEstoque)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Categoria.CategoriaNome)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.LancheId">Edita</a> |
                            <a asp-action="Details" asp-route-id="@item.LancheId">Detalhes</a> |
                            <a asp-action="Delete" asp-route-id="@item.LancheId">Deleta</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>